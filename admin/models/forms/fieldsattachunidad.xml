<?xml version="1.0" encoding="utf-8"?>
<!-- $Id: FIELDSATTACHIMAGE.xml 62 2010-11-28 16:08:16Z cristian $ -->
<form
	addrulepath="/administrator/components/com_fieldsattach/models/rules"
    addfieldpath="/administrator/components/com_fieldsattach/models/fields"
>
	<fieldset name="details">
		<field name="id" type="hidden" />
		<field name="visible" type="hidden" default="1" ></field>
		<field name="searchable" type="hidden" default="1" ></field>
		 
		<field
			name="title"
			type="text"
			label="COM_FIELDSATTACH_FIELDSATTACH_FIELD_TITLE_LABEL"
			description="COM_FIELDSATTACH_FIELDSATTACH_FIELD_TITLE_DESC"
			size="40"
			class="inputbox" 
			required="true"
			default=""
		/>
                <field name="showtitle" type="radio"
			default="1"
			label="COM_FIELDSATTACH_FIELDSATTACH_FIELD_SHOWTITLE_LABEL"
			size="1"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>
        
        <field name="positionarticle" type="radio"
			default="1"
			label="COM_FIELDSATTACH_FIELDSATTACH_FIELD_POSITIONFIELD_LABEL"
			size="0"
		>
			<option value="0">AFTER</option>
			<option value="1">BEFORE</option>
			<option value="2">MANUAL</option>
		</field>
        
        <field
			name="groupid"
			type="listgroup"
			extension="com_fieldsattach"
			class="inputbox"
			default=""
			label="COM_FIELDSATTACH_FIELDSATTACH_FIELD_GROUPID_LABEL"
			description="COM_FIELDSATTACH_FIELDSATTACH_FIELD_GROUPID_DESC"
			required="true"
		> 
			<option value="">Select one please</option>
		</field>

      
        
        <field
			name="type"
			type="list"
			extension="com_fieldsattach"
			class="inputbox"
			default=""
			label="COM_FIELDSATTACH_FIELDSATTACH_FIELD_TYPE_LABEL"
			description="COM_FIELDSATTACH_FIELDSATTACH_FIELD_TYPE_DESC"
			required="true"
		>
                    <option value="">Select one please</option>
                     
		</field>
		 
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL"
			description="COM_CONTENT_FIELD_LANGUAGE_DESC" class="inputbox"
		>
			<option value="*">JALL</option>
		</field>

        <field
			name="published"
			type="list"
			class="inputbox"
			default="1"
			size="1"
			label="JGLOBAL_STATE"
			description="JFIELD_PUBLISHED_DESC">
			<option
				value="1">
				JPUBLISHED</option>
			<option
				value="0">
				JUNPUBLISHED</option> 
        </field>
               
        <field
			name="required"
			type="list"
			class="inputbox"
			default="0"
			size="1"
			label="COM_FIELDSATTACH_FIELDSATTACH_REQUIRED"
			description="COM_FIELDSATTACH_FIELDSATTACH_REQUIRED_DESC">
			<option
				value="1">
				JYES</option>
			<option
				value="0">
				JNO</option>
        </field>
        <field
			name="extras"
			type="textarea"
			label="COM_FIELDSATTACH_FIELDSATTACH_FIELD_SHOW_EXTRAS_LABEL"
			description="COM_FIELDSATTACH_FIELDSATTACH_FIELD_SHOW_EXTRAS_DESC"
			default=""
            rows="15" cols="30"
		>

		</field>
	</fieldset>

	<fields name="params">
    	<field name="ordering" type="ordering" class="inputbox" label="JFIELD_ORDERING_LABEL" description="JFIELD_ORDERING_DESC" /> 
	</fields>
</form>

