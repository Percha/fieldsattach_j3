	<authorEmail>cristiangrano@hotmail.com	</authorEmail>
	<authorUrl>www.percha.com</authorUrl>
	<version>4.5.6</version>
	<description>Provides insert fields in article</description>
        
	<files>
		<filename plugin="fieldsattachment">fieldsattachment.php</filename>
		<folder>js</folder> 
        <folder>lib</folder>
		 
	</files>
        <config>
	<fields name="params">
		<fieldset name="basic">
			<field name="oneclicksave" type="radio" default="1" label="One-click article save (experimental):" description="If 'Yes', attached fields will be shown during first edit. If 'No', the attached fields will be shown only after article save.">
				<option value="0">No</option>
				<option value="1">Yes (Experimental)</option>
			</field>
			<field name="logs" type="radio" default="0" label="LOGS">
				<option value="0">Disabled</option>
				<option value="1">Enabled</option>
			</field>
		</fieldset>
	</fields>
	</config> 
	 
</extension>

